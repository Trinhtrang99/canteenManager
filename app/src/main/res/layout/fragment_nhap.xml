<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        tools:context=".post.CreatePostFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Loại" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_share"
                    android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/spin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl1"
                    android:layout_marginTop="10dp"
                    android:text="đơn vị" />

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_share"
                    android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/spin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl2"
                    android:layout_marginTop="10dp"
                    android:text="Tên" />

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_share"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:lines="1" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl3"
                    android:text="Gía tiền" />

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv4"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_share"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl4"
                    android:text="Số lượng" />

                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv5"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_share"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnimg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/rl5"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/btncustom"
                    android:text="Thêm (50.000đ)"
                    android:textAllCaps="false" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnimg"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" />
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>
